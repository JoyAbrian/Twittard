<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PostingActivity"
    android:background="@color/black">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/toggleBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/posting_close"
            app:tint="@color/white"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentStart="true"/>

        <Button
            android:id="@+id/togglePost"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:text="Posting"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#2A00B2CA"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="vertical"
        android:layout_marginHorizontal="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/profile_anonym"
                android:layout_gravity="top"
                android:layout_marginTop="7dp"/>

            <EditText
                android:id="@+id/inputTweet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:hint="Apa yang sedang terjadi?"
                android:textColor="#C3C3C3"
                android:textColorHint="#707070"
                android:textSize="16sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imagePreview"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="fitCenter"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="start"
        android:layout_marginLeft="15dp">

        <ImageView
            android:id="@+id/inputImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/posting_image"
            app:tint="#008EFF" />

    </LinearLayout>

</LinearLayout>